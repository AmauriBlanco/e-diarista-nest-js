<main class='container'>
    <h1>Lista de Diaristas</h1>
    <table class='table'>
        <thead>
            <th>ID</th>
            <th>Nome</th>
            <th>Endereço</th>
            <th>Ações</th>
        </thead>
        <tbody>
            {{#each diaristas}}
            <tr>
                <th>{{this.id}}</th>
                <td><a href='/diaristas/show/{{this.id}}'>{{this.nome}}</a></td>
                <td>{{this.endereco}}</td>
                <td><a href='/diaristas/{{this.id}}/edit' class='btn btn-primary'>Editar</a>
                    <form action="/diaristas/{{this.id}}?_method=DELETE" method="POST" style="display: inline;">
                        <button type="submit" value="submit"
                            onclick="return confirm('Tem certeza que deseja excluir esse registro?')"
                            class="btn btn-danger">Excluir</button>
                    </form>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <a href="/diaristas/create" class="btn btn-success">Adicionar Diarista</a>
</main>